{
    "name": "kafkiansky/day4",
    "description": "Testing CDC using Sequin.",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "v.zanfir",
            "email": "vadimzanfir@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "amphp/byte-stream": "^2.1",
        "amphp/http-client": "^5.3",
        "amphp/http-server": "^3.4",
        "amphp/log": "^2.0",
        "amphp/postgres": "^2.1",
        "monolog/monolog": "^3.9",
        "psr/log": "^3.0",
        "ramsey/uuid": "^4.7",
        "symfony/dotenv": "^7.2",
        "azjezz/psl": "^3.2",
        "amphp/http-server-router": "^2.0",
        "latitude/latitude": "^4.2",
        "cuyz/valinor": "^1.15"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.47",
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpstan/phpstan": "^2.1",
        "phpyh/coding-standard": "^2.6",
        "symfony/var-dumper": "^7.2"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Kafkiansky\\Day4\\": "src/"
        },
        "files": [
            "src/createLogger.php",
            "src/createPostgres.php",
            "src/parseEnv.php",
            "src/createServer.php",
            "src/createRouter.php",
            "src/shutdown.php",
            "src/createMapper.php",
            "src/setupSchema.php",
            "src/Sql/queryBuilder.php",
            "src/Sql/parseError.php",
            "src/Http/response.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "scripts": {
        "check": [
            "@composer fixcs -- --dry-run",
            "@phpstan",
            "@composer validate"
        ],
        "fixcs": "vendor/bin/php-cs-fixer fix --diff --verbose",
        "phpstan": "vendor/bin/phpstan analyze",
        "pre-command-run": "mkdir -p var"
    }
}
